velocidade = float(input('Qual foi a velocidade do seu carro?'))
if velocidade <= 80:
    print('Você não foi multado =) Continue dirigindo com segurança.')
else:
    multa = (velocidade-80) * 7
    print('Você foi multado. Ultrapassou a velocidade limite de 80km/h.\nDirija com mais atenção!')
print(f'Terá que pagar uma multa de {multa:.0f} reais.')
